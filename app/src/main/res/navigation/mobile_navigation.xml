<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.giedrius.slikas.pizzaratings.ui.home.HomeFragment"
        android:label="@string/title_home" >
        <action
            android:id="@+id/action_navigation_home_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.giedrius.slikas.pizzaratings.ui.favourites.FavouritesFragment"
        android:label="@string/title_favourites" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.giedrius.slikas.pizzaratings.ui.profile.ProfileFragment"
        android:label="@string/title_profile" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.giedrius.slikas.pizzaratings.ui.details.DetailsFragment"
        android:label="DetailsFragment">
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
</navigation>